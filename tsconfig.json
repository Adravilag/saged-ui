{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2022"
    ],
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "es2022",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "h.Fragment",
    "skipLibCheck": true,
    "paths": {
      "@sage-box/badge": ["./packages/badge/src/index.ts"],
      "@sage-box/button": ["./packages/button/src/index.ts"],
      "@sage-box/dropdown": ["./packages/dropdown/src/index.ts"],
      "@sage-box/icons": ["./packages/icons/src/index.ts"],
      "@sage-box/modal": ["./packages/modal/src/index.ts"],
      "@sage-box/skeleton": ["./packages/skeleton/src/index.ts"],
      "@sage-box/theme-toggle": ["./packages/theme-toggle/src/index.ts"],
      "@sage-box/article-editor": ["./packages/article-editor/src/index.ts"],
      "@sage-box/core": ["./packages/core/src/index.ts"]
    }
  },
  "include": [
    ".",
    "src",
    "packages/*/src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "loader",
    "www",
    "wrappers",
    "tools",
    "docs",
    "website",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.e2e.ts"
  ]
}
