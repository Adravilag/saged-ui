{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2022"
    ],
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "es2022",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "h.Fragment",
    "skipLibCheck": true,
    "paths": {
      "@sagebox/badge": ["./packages/badge/src/index.ts"],
      "@sagebox/button": ["./packages/button/src/index.ts"],
      "@sagebox/dropdown": ["./packages/dropdown/src/index.ts"],
      "@sagebox/icons": ["./packages/icons/src/index.ts"],
      "@sagebox/skeleton": ["./packages/skeleton/src/index.ts"],
      "@sagebox/theme-toggle": ["./packages/theme-toggle/src/index.ts"],
      "@sagebox/article-editor": ["./packages/article-editor/src/index.ts"],
      "@sagebox/core": ["./packages/core/src/index.ts"]
    }
  },
  "include": [
    "src",
    "packages"
  ],
  "exclude": [
    "node_modules"
  ]
}
