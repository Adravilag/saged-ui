{
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "./fesm2022",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "sagebox": ["../../dist/types/index.d.ts"],
      "sagebox/components": ["../../dist/types/components.d.ts"],
      "sagebox/components/*": ["../../dist/components/*"]
    },
    "typeRoots": ["../../node_modules/@types", "../../dist/types"],
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "../../dist/types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
