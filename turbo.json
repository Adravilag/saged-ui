{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "stencil.config.ts", "tsconfig.json", "package.json"],
      "outputs": ["dist/**", "loader/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["src/**/*.spec.ts", "src/**/*.spec.tsx"]
    },
    "test:spec": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "build:angular": {
      "dependsOn": ["build"],
      "outputs": ["dist/angular/**"]
    },
    "build:react": {
      "dependsOn": ["build"],
      "outputs": ["react/dist/**"]
    },
    "build:all": {
      "dependsOn": ["build", "build:angular", "build:react"],
      "outputs": ["dist/**", "loader/**", "react/dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "docs:dev": {
      "cache": false,
      "persistent": true
    },
    "docs:build": {
      "dependsOn": ["build"],
      "outputs": ["dist-docs/**"]
    }
  }
}
