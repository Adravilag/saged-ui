{
  "name": "@saged-ui/article-editor",
  "version": "1.0.0",
  "description": "Article editor component for SagedUI - Rich text and markdown editor",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "unpkg": "dist/saged-ui-article-editor/saged-ui-article-editor.esm.js",
