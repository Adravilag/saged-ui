---
/**
 * HeroSection.astro
 * Sección principal con header, stats, features y quickstart
 */
import { quickStartLinks } from '@/config/componentData';
---

<div class="header-quickstart-row">
  <header class="main-header animate-on-scroll fade-up">
    <div class="header-badge">
      <span class="badge-dot"></span>
      <span data-i18n="home.badge">Documentación</span>
    </div>
    <h1 class="main-title" data-i18n="home.title">Componentes</h1>
    <p class="main-description" data-i18n="home.description">
      Explora la colección completa de componentes SageBox. Cada componente está diseñado pensando en accesibilidad, rendimiento y personalización.
    </p>
    <div class="header-stats">
      <div class="stat">
        <div class="stat-icon">
          <sg-icon name="dashboard" size="20" color="var(--accent)"></sg-icon>
        </div>
        <div class="stat-content">
          <span class="stat-value">7</span>
          <span class="stat-label" data-i18n="stats.components">Componentes</span>
        </div>
      </div>
      <div class="stat">
        <div class="stat-icon">
          <sg-icon name="code" size="20" color="var(--accent)"></sg-icon>
        </div>
        <div class="stat-content">
          <span class="stat-value">100%</span>
          <span class="stat-label" data-i18n="stats.typescript">TypeScript</span>
        </div>
      </div>
      <div class="stat">
        <div class="stat-icon">
          <sg-icon name="verified" size="20" color="var(--accent)"></sg-icon>
        </div>
        <div class="stat-content">
          <span class="stat-value">A11y</span>
          <span class="stat-label" data-i18n="stats.accessible">Accesible</span>
        </div>
      </div>
    </div>
  </header>

  <!-- Features Highlights - Distribuidos en 2 columnas -->
  <div class="features-highlights animate-on-scroll fade-up delay-1">
    <!-- Columna 1 -->
    <div class="feature-item">
      <sg-icon name="dashboard" size="18" color="var(--accent)"></sg-icon>
      <span data-i18n="features.treeShake">Tree-shakeable</span>
    </div>
    <div class="feature-item">
      <sg-icon name="palette" size="18" color="var(--accent)"></sg-icon>
      <span data-i18n="features.cssVars">Variables CSS</span>
    </div>
    <div class="feature-item">
      <sg-icon name="shield" size="18" color="var(--accent)"></sg-icon>
      <span data-i18n="features.wcag">WCAG 2.1</span>
    </div>
    <div class="feature-item">
      <sg-icon name="code" size="18" color="var(--accent)"></sg-icon>
      <span data-i18n="features.typescript">TypeScript</span>
    </div>
    <!-- Columna 2 -->
    <div class="feature-item">
      <sg-icon name="lightning" size="18" color="var(--accent)"></sg-icon>
      <span data-i18n="features.lazyLoad">Carga diferida</span>
    </div>
    <div class="feature-item">
      <sg-icon name="verified" size="18" color="var(--accent)"></sg-icon>
      <span data-i18n="features.zeroDeps">Zero runtime deps</span>
    </div>
    <div class="feature-item">
      <sg-icon name="moon" size="18" color="var(--accent)"></sg-icon>
      <span data-i18n="features.darkMode">Modo oscuro</span>
    </div>
    <div class="feature-item">
      <sg-icon name="settings" size="18" color="var(--accent)"></sg-icon>
      <span data-i18n="features.customizable">Personalizable</span>
    </div>
  </div>

  <aside class="quickstart-aside animate-on-scroll fade-left delay-2" aria-labelledby="quickstart-heading">
    <h2 class="quickstart-title" id="quickstart-heading">
      <sg-icon name="rocket" size="18" color="var(--accent)"></sg-icon>
      <span data-i18n="home.quickStart">Inicio Rápido</span>
    </h2>
    <div class="quickstart-steps-compact">
      <div class="step-compact">
        <span class="step-label" data-i18n="home.install">1. Instalar</span>
        <code class="step-code-compact">npm install sagebox</code>
      </div>
      <div class="step-compact">
        <span class="step-label" data-i18n="home.import">2. Importar</span>
        <code class="step-code-compact">import 'sagebox';</code>
      </div>
      <div class="step-compact">
        <span class="step-label" data-i18n="home.use">3. Usar</span>
        <code class="step-code-compact">&lt;sg-button&gt;Click me&lt;/sg-button&gt;</code>
      </div>
    </div>
    <div class="quickstart-links">
      {quickStartLinks.map((link) => (
        <a href={link.url} target="_blank" rel="noopener" class="quickstart-link">
          <sg-icon name={link.icon} size="16"></sg-icon>
          {link.label}
        </a>
      ))}
    </div>
  </aside>
</div>

<style>
  .header-quickstart-row {
    display: grid;
    grid-template-columns: 1fr auto minmax(260px, 300px);
    gap: 2rem;
    margin-bottom: 2rem;
    align-items: start;
  }

  .main-header {
    grid-column: 1;
    padding: 2rem 0;
  }

  .header-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 0.875rem;
    background: var(--accent-soft);
    border: 1px solid var(--accent);
    border-radius: 100px;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--accent);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .badge-dot {
    width: 6px;
    height: 6px;
    background: var(--accent);
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(1.2); }
  }

  .main-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    margin: 0 0 0.75rem;
    color: var(--text);
    line-height: 1.1;
    letter-spacing: -0.02em;
  }

  .main-description {
    font-size: 1.125rem;
    color: var(--text-muted);
    margin: 0 0 1.5rem;
    line-height: 1.6;
    max-width: 520px;
  }

  .header-stats {
    display: flex;
    gap: 1.5rem;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 1.25rem;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
    min-width: 100px;
  }

  .stat:hover {
    border-color: var(--accent);
    background: var(--accent-soft);
  }

  .stat-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
  }

  .stat-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.125rem;
  }

  .stat-value {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--accent);
    line-height: 1;
  }

  .stat-label {
    font-size: 0.7rem;
    color: var(--text-muted);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  /* Features Highlights */
  .features-highlights {
    grid-column: 2;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.5rem;
    padding: 1rem;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 0.75rem;
    background: var(--bg);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-md);
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--text);
    transition: all var(--transition-fast);
  }

  .feature-item:hover {
    border-color: var(--accent);
    background: var(--accent-soft);
  }

  /* Quick Start */
  .quickstart-aside {
    grid-column: 3;
    padding: 1.25rem;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
  }

  .quickstart-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1rem;
    font-weight: 700;
    margin: 0 0 1rem;
    color: var(--text);
  }

  .quickstart-steps-compact {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .step-compact {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .step-label {
    font-size: 0.6875rem;
    font-weight: 600;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .step-code-compact {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    padding: 0.5rem 0.75rem;
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: var(--radius-sm);
    color: var(--accent);
    overflow-x: auto;
    white-space: nowrap;
  }

  .quickstart-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0.5rem;
    padding-top: 0.75rem;
    border-top: 1px solid var(--border-subtle);
  }

  .quickstart-link {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.25rem;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--text-muted);
    text-decoration: none;
    padding: 0.375rem 0.5rem;
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
  }

  .quickstart-link:hover {
    color: var(--accent);
    border-color: var(--accent);
    background: var(--accent-soft);
  }

  @media (max-width: 1100px) {
    .header-quickstart-row {
      grid-template-columns: 1fr minmax(280px, 340px);
    }

    .main-header {
      grid-column: 1;
      grid-row: 1 / 3;
    }

    .features-highlights {
      grid-column: 2;
      grid-row: 1;
      grid-template-columns: 1fr 1fr;
    }

    .quickstart-aside {
      grid-column: 2;
      grid-row: 2;
    }
  }

  @media (max-width: 768px) {
    .header-quickstart-row {
      grid-template-columns: 1fr;
    }

    .main-header {
      grid-column: 1;
      grid-row: 1;
    }

    .features-highlights {
      grid-column: 1;
      grid-row: 2;
      grid-template-columns: repeat(2, 1fr);
    }

    .quickstart-links {
      flex-wrap: wrap;
    }

    .quickstart-link {
      flex: 1 1 auto;
    }

    .quickstart-aside {
      grid-column: 1;
      grid-row: 3;
    }
  }
</style>
