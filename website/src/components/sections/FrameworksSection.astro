---

<section class="frameworks-section animate-on-scroll fade-up">
  <div class="section-header">
    <h2 class="section-title">
      <sg-icon name="code" size="24" color="var(--accent)"></sg-icon>
      Works with your stack
    </h2>
    <p class="section-subtitle">Native Web Components that integrate seamlessly with any framework</p>
  </div>

  <div class="framework-cards">
    {frameworks.map((framework) => (
      <div class="framework-card animate-on-scroll scale-in">
        <div class={`framework-icon ${framework.icon}`}>
          <Fragment set:html={frameworkIcons[framework.icon]} />
        </div>
        <div class="framework-info">
          <h3 class="framework-name">{framework.name}</h3>
          <span class="framework-version">{framework.version}</span>
        </div>
        <p class="framework-desc">{framework.description}</p>
        <div class="framework-links">
          {framework.npmLink && (
            <a href={framework.npmLink} target="_blank" rel="noopener" class="framework-link">
              <sg-icon name="download" size="14"></sg-icon>
              npm
            </a>
          )}
          {framework.githubLink && (
            <a href={framework.githubLink} target="_blank" rel="noopener" class="framework-link">
              <sg-icon name="github" size="14"></sg-icon>
              GitHub
            </a>
          )}
        </div>
        <code class="framework-install">{framework.installCommand}</code>
      </div>
    ))}
  </div>
</section>

<style>
  .frameworks-section {
    padding: 2.5rem 0 1.5rem;
    border-bottom: 1px solid var(--border-subtle);
    margin-bottom: 1.5rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .section-title {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem;
    color: var(--text);
  }

  .section-subtitle {
    font-size: 1rem;
    color: var(--text-muted);
    margin: 0;
  }

  .framework-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 1rem;
  }

  .framework-card {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding: 1.25rem;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    transition: all var(--transition-normal);
  }

  .framework-card:hover {
    border-color: var(--border-muted);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .framework-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: var(--radius-md);
    background: var(--accent-soft);
    color: var(--accent);
    transition: all var(--transition-fast);
  }

  .framework-icon.web { color: var(--accent); }
  .framework-icon.react { color: #61dafb; background: rgba(97, 218, 251, 0.1); }
  .framework-icon.angular { color: #dd0031; background: rgba(221, 0, 49, 0.1); }
  .framework-icon.vue { color: #4fc08d; background: rgba(79, 192, 141, 0.1); }

  .framework-info {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
  }

  .framework-name {
    font-size: 1rem;
    font-weight: 600;
    margin: 0;
    color: var(--text);
  }

  .framework-version {
    font-size: 0.75rem;
    color: var(--text-muted);
    background: var(--bg);
    padding: 0.125rem 0.5rem;
    border-radius: var(--radius-sm);
  }

  .framework-desc {
    font-size: 0.875rem;
    color: var(--text-muted);
    margin: 0;
    line-height: 1.5;
  }

  .framework-links {
    display: flex;
    gap: 0.5rem;
  }

  .framework-link {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--text-muted);
    text-decoration: none;
    padding: 0.25rem 0.5rem;
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
  }

  .framework-link:hover {
    color: var(--accent);
    border-color: var(--accent);
    background: var(--accent-soft);
  }

  .framework-install {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    padding: 0.5rem 0.75rem;
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: var(--radius-sm);
    color: var(--accent);
    overflow-x: auto;
    white-space: nowrap;
  }

  @media (max-width: 640px) {
    .framework-cards {
      grid-template-columns: 1fr;
    }
  }
</style>
