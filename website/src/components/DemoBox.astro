---
/**
 * DemoBox.astro
 * Caja de demo con preview y c贸digo expandible
 * Usa CodeBlock para mostrar el c贸digo
 */
import CodeBlock from './CodeBlock.astro';

interface Props {
  label?: string;
  code?: string;
  filename?: string;
}

const { label, code, filename = 'example.html' } = Astro.props;
---

<div class="demo-box">
  <div class="demo-box-header">
    {label && <p class="demo-label">{label}</p>}
    {code && (
      <div class="code-actions">
        <button class="box-toggle-code" title="Mostrar/ocultar c贸digo">
          <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="m16 18 6-6-6-6"/><path d="m8 6-6 6 6 6"/>
          </svg>
          <span class="btn-label">C贸digo</span>
        </button>
      </div>
    )}
  </div>
  <div class="demo-box-content">
    <slot />
  </div>
  {code && (
    <div class="box-code">
      <CodeBlock code={code} filename={filename} />
    </div>
  )}
</div>

<style>
  .demo-box {
    padding: 1.5rem;
    background: var(--surface);
    border-radius: var(--radius-lg);
    border: 1px solid var(--border);
    box-shadow: var(--shadow-md);
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    transition: box-shadow var(--transition-normal);
  }

  .demo-box:hover {
    box-shadow: var(--shadow-lg);
  }

  .demo-box-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;
  }

  .demo-label {
    font-size: 0.6875rem;
    font-weight: 600;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.06em;
    margin: 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .demo-label::before {
    content: '';
    width: 4px;
    height: 4px;
    background: var(--accent);
    border-radius: 50%;
  }

  .code-actions {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .box-toggle-code {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.375rem;
    padding: 0.25rem 0.625rem;
    height: 26px;
    background: var(--surface-hover);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    color: var(--text-muted);
    cursor: pointer;
    transition: all var(--transition-fast);
    font-size: 0.6875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .box-toggle-code .btn-label {
    display: none;
  }

  @media (min-width: 640px) {
    .box-toggle-code .btn-label {
      display: inline;
    }
  }

  .box-toggle-code:hover {
    background: var(--accent-soft);
    border-color: var(--accent);
    color: var(--accent);
  }

  .demo-box.code-visible .box-toggle-code {
    background: var(--accent-soft);
    border-color: var(--accent);
    color: var(--accent);
  }

  .demo-box-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding: 2rem;
    background: var(--bg);
    border-radius: var(--radius-md);
    border: 2px dashed var(--border);
    min-height: 80px;
  }

  .box-code {
    display: none;
    margin-top: 0.75rem;
  }

  .demo-box.code-visible .box-code {
    display: block;
    animation: slideDown 0.2s ease-out;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-4px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  // Toggle code visibility for boxes
  document.querySelectorAll('.box-toggle-code').forEach(btn => {
    btn.addEventListener('click', () => {
      const box = btn.closest('.demo-box');
      if (box) {
        box.classList.toggle('code-visible');
      }
    });
  });
</script>
