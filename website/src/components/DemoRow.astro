---
/**
 * DemoRow.astro
 * Sección de demo con preview y código expandible
 * Usa CodeBlock para mostrar el código
 */
import CodeBlock from './CodeBlock.astro';

interface Props {
  label?: string;
  labelKey?: string;
  code?: string;
  filename?: string;
}

const { label, labelKey, code, filename = 'example.html' } = Astro.props;
---

<div class="demo-section">
  <div class="demo-section-header">
    {label && <p class="demo-label" data-i18n={labelKey}>{label}</p>}
    {code && (
      <div class="code-actions">
        <button class="section-toggle-code" title="Mostrar/ocultar código">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="m16 18 6-6-6-6"/><path d="m8 6-6 6 6 6"/>
          </svg>
          <span class="btn-label">Código</span>
        </button>
      </div>
    )}
  </div>
  <div class="demo-row">
    <slot />
  </div>
  {code && (
    <div class="section-code">
      <CodeBlock code={code} filename={filename} />
    </div>
  )}
</div>

<style>
  .demo-section {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding-bottom: 1.25rem;
    border-bottom: 1px dashed var(--border-subtle);
  }

  .demo-section:last-child {
    padding-bottom: 0;
    border-bottom: none;
  }

  .demo-section-header {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .demo-label {
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--text);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin: 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .demo-label::before {
    content: '';
    width: 3px;
    height: 3px;
    background: var(--accent);
    border-radius: 50%;
  }

  .code-actions {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .section-toggle-code {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.375rem;
    padding: 0.25rem 0.5rem;
    height: 24px;
    background: transparent;
    border: 1px solid var(--border);
    border-radius: var(--radius-sm);
    color: var(--text-muted);
    cursor: pointer;
    transition: all var(--transition-fast);
    opacity: 0.8;
    font-size: 0.625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .section-toggle-code .btn-label {
    display: none;
  }

  @media (min-width: 640px) {
    .section-toggle-code .btn-label {
      display: inline;
    }
  }

  .section-toggle-code:hover {
    opacity: 1;
    background: var(--accent-soft);
    border-color: var(--accent);
    color: var(--accent);
  }

  .demo-section.code-visible .section-toggle-code {
    opacity: 1;
    background: var(--accent-soft);
    border-color: var(--accent);
    color: var(--accent);
  }

  .demo-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    align-items: center;
    justify-content: center;
  }

  .section-code {
    display: none;
    margin-top: 0.5rem;
  }

  .demo-section.code-visible .section-code {
    display: block;
    animation: slideDown 0.25s ease-out;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  // Toggle code visibility
  document.querySelectorAll('.section-toggle-code').forEach(btn => {
    btn.addEventListener('click', () => {
      const section = btn.closest('.demo-section');
      if (section) {
        section.classList.toggle('code-visible');
      }
    });
  });
</script>
