---
import Layout from '../layouts/Layout.astro';
import Sidebar from '../components/Sidebar.astro';

const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;

const features = [
  {
    icon: `<path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>`,
    titleKey: 'about.featuresList.webComponents',
    descKey: 'about.featuresList.webComponentsDesc',
    title: 'Web Components',
    description: 'Built with Stencil.js for maximum compatibility across frameworks.',
  },
  {
    icon: `<circle cx="12" cy="12" r="10"/><path d="M8 14s1.5 2 4 2 4-2 4-2"/><line x1="9" y1="9" x2="9.01" y2="9"/><line x1="15" y1="9" x2="15.01" y2="9"/>`,
    titleKey: 'about.featuresList.accessibility',
    descKey: 'about.featuresList.accessibilityDesc',
    title: 'Accessibility First',
    description: 'WCAG 2.1 compliant with full keyboard navigation and screen reader support.',
  },
  {
    icon: `<path d="M12 2v4M12 18v4M4.93 4.93l2.83 2.83M16.24 16.24l2.83 2.83M2 12h4M18 12h4M4.93 19.07l2.83-2.83M16.24 7.76l2.83-2.83"/>`,
    titleKey: 'about.featuresList.themeable',
    descKey: 'about.featuresList.themeableDesc',
    title: 'Themeable',
    description: 'CSS Custom Properties for easy customization and dark mode support.',
  },
  {
    icon: `<path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>`,
    titleKey: 'about.featuresList.lightweight',
    descKey: 'about.featuresList.lightweightDesc',
    title: 'Lightweight',
    description: 'Zero dependencies, tree-shakeable, and optimized for performance.',
  },
  {
    icon: `<rect x="3" y="3" width="18" height="18" rx="2"/><path d="M3 9h18M9 21V9"/>`,
    titleKey: 'about.featuresList.typescript',
    descKey: 'about.featuresList.typescriptDesc',
    title: 'TypeScript',
    description: 'Full TypeScript support with auto-generated type definitions.',
  },
  {
    icon: `<circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/>`,
    titleKey: 'about.featuresList.frameworkAgnostic',
    descKey: 'about.featuresList.frameworkAgnosticDesc',
    title: 'Framework Agnostic',
    description: 'Works with React, Angular, or vanilla JavaScript.',
  },
];

const team = [
  {
    name: 'Adrián Dávila Guerra',
    role: 'Full-Stack Developer',
    avatar: 'https://media.licdn.com/dms/image/v2/D4D03AQHhUwd-e5bjfQ/profile-displayphoto-scale_400_400/B4DZkFoh04GQAg-/0/1756736135277?e=1766620800&v=beta&t=YwY8thNl-AmvsMbd84RNIhh6qF9vmBdmdDx-WXSA0v8',
    github: 'adravilag',
  },
];

const stats = [
  { value: '7+', label: 'Components', labelKey: 'about.stats.components' },
  { value: '100%', label: 'TypeScript', labelKey: 'about.stats.typescript' },
  { value: '0', label: 'Dependencies', labelKey: 'about.stats.dependencies' },
  { value: 'MIT', label: 'License', labelKey: 'about.stats.license' },
];
---

<Layout title="About - SageBox">
  <div class="app">
    <Sidebar />
    <main class="about-page">
      <div class="content-wrapper">
        <!-- Back Link -->
        <a href={base} class="back-link">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="m15 18-6-6 6-6"/>
          </svg>
          <span data-i18n="tokens.back">Back</span>
        </a>

        <!-- Hero -->
        <header class="about-header">
          <div class="header-icon">
            <svg width="28" height="28" viewBox="0 -960 960 960" fill="currentColor">
              <path d="M440-280h80v-240h-80v240Zm40-320q17 0 28.5-11.5T520-640q0-17-11.5-28.5T480-680q-17 0-28.5 11.5T440-640q0 17 11.5 28.5T480-600Zm0 520q-83 0-156-31.5T197-197q-54-54-85.5-127T80-480q0-83 31.5-156T197-763q54-54 127-85.5T480-880q83 0 156 31.5T763-763q54 54 85.5 127T880-480q0 83-31.5 156T763-197q-54 54-127 85.5T480-80Zm0-80q134 0 227-93t93-227q0-134-93-227t-227-93q-134 0-227 93t-93 227q0 134 93 227t227 93Zm0-320Z"/>
            </svg>
          </div>
          <h1 class="about-title" data-i18n="about.title">About SageBox</h1>
          <p class="about-description" data-i18n="about.description">
            A modern, accessible, and highly customizable Web Components library built with Stencil.js.
          </p>
        </header>

        <!-- Stats -->
        <section class="stats-section">
          {stats.map(stat => (
            <div class="stat-card">
              <span class="stat-value">{stat.value}</span>
              <span class="stat-label" data-i18n={stat.labelKey}>{stat.label}</span>
            </div>
          ))}
        </section>

        <!-- Mission -->
        <section class="about-section">
          <h2 class="section-title">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/><path d="M12 16v-4M12 8h.01"/>
            </svg>
            <span data-i18n="about.mission">Our Mission</span>
          </h2>
          <div class="mission-content">
            <p data-i18n="about.missionText">
              SageBox was created to provide developers with a set of high-quality, accessible,
              and framework-agnostic UI components. Our goal is to make building beautiful
              interfaces easier while maintaining the highest standards of accessibility and performance.
            </p>
            <p data-i18n="about.missionText2">
              We believe that great UI components should work everywhere, be easy to customize,
              and not force you into any particular framework or build system.
            </p>
          </div>
        </section>

        <!-- Features -->
        <section class="about-section">
          <h2 class="section-title">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
            </svg>
            <span data-i18n="about.features">Key Features</span>
          </h2>
          <div class="features-grid">
            {features.map(feature => (
              <div class="feature-card">
                <div class="feature-icon">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <Fragment set:html={feature.icon} />
                  </svg>
                </div>
                <h3 class="feature-title" data-i18n={feature.titleKey}>{feature.title}</h3>
                <p class="feature-desc" data-i18n={feature.descKey}>{feature.description}</p>
              </div>
            ))}
          </div>
        </section>

        <!-- Team -->
        <section class="about-section">
          <h2 class="section-title">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>
            </svg>
            <span data-i18n="about.team">Team</span>
          </h2>
          <div class="team-grid">
            {team.map(member => (
              <div class="team-card">
                {member.avatar.startsWith('http') ? (
                  <img class="team-avatar team-avatar-img" src={member.avatar} alt={member.name} />
                ) : (
                  <div class="team-avatar">{member.avatar}</div>
                )}
                <div class="team-info">
                  <h3 class="team-name">{member.name}</h3>
                  <p class="team-role">{member.role}</p>
                  <a href={`https://github.com/${member.github}`} target="_blank" class="team-link">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
                    </svg>
                    @{member.github}
                  </a>
                </div>
              </div>
            ))}
          </div>
        </section>

        <!-- Contributing -->
        <section class="about-section">
          <h2 class="section-title">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
            </svg>
            <span data-i18n="about.contributing">Contributing</span>
          </h2>
          <div class="contributing-content">
            <p data-i18n="about.contributingText">
              SageBox is open source and we welcome contributions! Whether it's fixing bugs,
              adding new features, improving documentation, or suggesting ideas, every contribution helps.
            </p>
            <div class="contributing-links">
              <a href="https://github.com/adravilag/sagebox" target="_blank" class="contrib-link">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
                </svg>
                GitHub Repository
              </a>
              <a href="https://github.com/adravilag/sagebox/issues" target="_blank" class="contrib-link secondary">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/><line x1="12" y1="8" x2="12" y2="12"/><line x1="12" y1="16" x2="12.01" y2="16"/>
                </svg>
                Report an Issue
              </a>
            </div>
          </div>
        </section>

        <!-- License -->
        <section class="about-section license-section">
          <div class="license-card">
            <div class="license-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/><polyline points="10 9 9 9 8 9"/>
              </svg>
            </div>
            <div class="license-content">
              <h3 data-i18n="about.license">MIT License</h3>
              <p data-i18n="about.licenseText">
                SageBox is released under the MIT License. You're free to use it in personal
                and commercial projects.
              </p>
            </div>
          </div>
        </section>
      </div>
    </main>
  </div>
</Layout>

<style>
  .app {
    display: flex;
    min-height: 100vh;
    background: var(--bg);
  }

  .about-page {
    flex: 1;
    overflow-y: auto;
    padding: 2rem;
  }

  .content-wrapper {
    max-width: 900px;
    margin: 0 auto;
  }

  /* Header */
  .about-header {
    text-align: center;
    padding: 2rem 0 3rem;
    border-bottom: 1px solid var(--border);
    margin-bottom: 2rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.8125rem;
    color: var(--text-muted);
    text-decoration: none;
    margin-bottom: 1.5rem;
    transition: color var(--transition-fast);
  }

  .back-link:hover {
    color: var(--accent);
  }

  .header-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    margin: 0 auto 1rem;
    background: var(--accent-soft);
    border-radius: var(--radius-lg);
    border: 1px solid var(--accent);
    color: var(--accent);
  }

  .about-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text);
    margin: 0 0 0.75rem;
    letter-spacing: -0.02em;
  }

  .about-description {
    font-size: 1rem;
    color: var(--text-muted);
    max-width: 500px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Stats */
  .stats-section {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
    margin-bottom: 3rem;
  }

  .stat-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1.25rem;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    text-align: center;
  }

  .stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--accent);
    margin-bottom: 0.25rem;
  }

  .stat-label {
    font-size: 0.75rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Sections */
  .about-section {
    margin-bottom: 3rem;
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text);
    margin: 0 0 1.25rem;
  }

  .section-title svg {
    color: var(--accent);
  }

  /* Mission */
  .mission-content p {
    font-size: 0.9375rem;
    line-height: 1.7;
    color: var(--text-muted);
    margin: 0 0 1rem;
  }

  .mission-content p:last-child {
    margin-bottom: 0;
  }

  /* Features */
  .features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  .feature-card {
    padding: 1.25rem;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
  }

  .feature-card:hover {
    border-color: var(--accent);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .feature-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: var(--accent-soft);
    border: 1px solid var(--accent);
    border-radius: var(--radius-sm);
    color: var(--accent);
    margin-bottom: 0.875rem;
  }

  .feature-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text);
    margin: 0 0 0.5rem;
  }

  .feature-desc {
    font-size: 0.8125rem;
    color: var(--text-muted);
    line-height: 1.5;
    margin: 0;
  }

  /* Team */
  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1rem;
  }

  .team-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
  }

  .team-avatar {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    background: linear-gradient(135deg, var(--accent) 0%, #4f46e5 100%);
    border-radius: var(--radius-md);
    color: white;
    font-size: 1.125rem;
    font-weight: 700;
    flex-shrink: 0;
  }

  .team-avatar-img {
    object-fit: cover;
    background: none;
  }

  .team-info {
    flex: 1;
    min-width: 0;
  }

  .team-name {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--text);
    margin: 0 0 0.25rem;
  }

  .team-role {
    font-size: 0.8125rem;
    color: var(--text-muted);
    margin: 0 0 0.5rem;
  }

  .team-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.75rem;
    color: var(--accent);
    text-decoration: none;
  }

  .team-link:hover {
    text-decoration: underline;
  }

  /* Contributing */
  .contributing-content p {
    font-size: 0.9375rem;
    line-height: 1.7;
    color: var(--text-muted);
    margin: 0 0 1.25rem;
  }

  .contributing-links {
    display: flex;
    gap: 0.75rem;
  }

  .contrib-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    background: var(--accent);
    color: white;
    font-size: 0.8125rem;
    font-weight: 500;
    text-decoration: none;
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
  }

  .contrib-link:hover {
    background: var(--accent-hover);
    transform: translateY(-1px);
  }

  .contrib-link.secondary {
    background: var(--surface);
    color: var(--text);
    border: 1px solid var(--border);
  }

  .contrib-link.secondary:hover {
    border-color: var(--accent);
    color: var(--accent);
  }

  /* License */
  .license-section {
    margin-bottom: 0;
  }

  .license-card {
    display: flex;
    align-items: center;
    gap: 1.25rem;
    padding: 1.5rem;
    background: linear-gradient(135deg, var(--accent-soft) 0%, rgba(99, 102, 241, 0.05) 100%);
    border: 1px solid var(--accent);
    border-radius: var(--radius-md);
  }

  .license-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--accent);
    border-radius: var(--radius-sm);
    color: white;
    flex-shrink: 0;
  }

  .license-content h3 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text);
    margin: 0 0 0.375rem;
  }

  .license-content p {
    font-size: 0.875rem;
    color: var(--text-muted);
    line-height: 1.5;
    margin: 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .about-page {
      padding: 1rem;
    }

    .stats-section {
      grid-template-columns: repeat(2, 1fr);
    }

    .features-grid {
      grid-template-columns: 1fr;
    }

    .contributing-links {
      flex-direction: column;
    }

    .license-card {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
