---
import Layout from './Layout.astro';
import Sidebar from '../components/Sidebar.astro';
import PropsTable from '../components/PropsTable.astro';
import { readFileSync } from 'fs';
import { join } from 'path';

interface Props {
  title: string;
  tag: string;
  description: string;
  packageName?: string;
  version?: string;
  props?: any[];
  events?: any[];
  slots?: any[];
  methods?: any[];
}

const { title, tag, description, packageName, version: propVersion, props = [], events = [], slots = [], methods = [] } = Astro.props;

// Get version from package.json if packageName is provided
function getPackageVersion(pkgName?: string): string {
  if (!pkgName) return '1.0.0';
  try {
    const packagePath = join(process.cwd(), '..', 'packages', pkgName, 'package.json');
    const packageJson = JSON.parse(readFileSync(packagePath, 'utf-8'));
    return packageJson.version || '1.0.0';
  } catch {
    return '1.0.0';
  }
}

const version = propVersion || getPackageVersion(packageName);

// Handle BASE_URL with trailing slash
const rawBase = import.meta.env.BASE_URL || '/';
const BASE_URL = rawBase.endsWith('/') ? rawBase : `${rawBase}/`;
---

<Layout title={`${title} - SageBox`}>
  <div class="app">
    <Sidebar />
    <main class="main component-page">
      <div class="content-wrapper">
        <div class="component-header">
          <a href={BASE_URL} class="back-link">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="m15 18-6-6 6-6"/>
            </svg>
            Volver a Components
          </a>
          <div class="component-title-row">
            <h1 class="component-title">{title}</h1>
            <code class="component-tag">&lt;{tag}&gt;</code>
            <span class="component-version">v{version}</span>
          </div>
          <p class="component-description">{description}</p>
        </div>

        <nav class="component-nav">
          <a href="#examples" class="nav-item active">Ejemplos</a>
          <a href="#api" class="nav-item">API</a>
          <a href="#usage" class="nav-item">Uso</a>
        </nav>

        <section id="examples" class="component-section">
          <h2 class="section-title">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="18" height="18" rx="2"/>
              <path d="M3 9h18"/>
            </svg>
            Ejemplos
          </h2>
          <div class="examples-content">
            <slot name="examples" />
          </div>
        </section>

        <section id="api" class="component-section">
          <h2 class="section-title sticky-title">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
              <path d="M14 2v6h6M16 13H8M16 17H8M10 9H8"/>
            </svg>
            API Reference
          </h2>
          <PropsTable props={props} events={events} slots={slots} methods={methods} />
        </section>

        <section id="usage" class="component-section">
          <h2 class="section-title">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="m16 18 6-6-6-6"/><path d="m8 6-6 6 6 6"/>
            </svg>
            CÃ³mo usar
          </h2>
          <div class="usage-content">
            <slot name="usage" />
          </div>
        </section>

        <slot />
      </div>
    </main>
  </div>
</Layout>

<style>
  .app {
    display: grid;
    grid-template-columns: 260px 1fr;
    min-height: 100vh;
  }

  .component-page {
    padding: 2.5rem;
    overflow-y: auto;
    display: flex;
    justify-content: center;
    background: var(--bg);
  }

  .content-wrapper {
    width: 100%;
    max-width: 900px;
  }

  .component-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.8125rem;
    color: var(--text-muted);
    text-decoration: none;
    margin-bottom: 1.25rem;
    transition: color var(--transition-fast);
  }

  .back-link:hover {
    color: var(--accent);
  }

  .component-title-row {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 0.75rem;
  }

  .component-title {
    font-size: 2.25rem;
    font-weight: 700;
    margin: 0;
    color: var(--text);
    letter-spacing: -0.02em;
  }

  .component-tag {
    font-size: 0.9375rem;
    font-family: var(--font-mono);
    background: var(--accent-soft);
    color: var(--accent);
    padding: 0.3125rem 0.875rem;
    border-radius: var(--radius-md);
    font-weight: 500;
  }

  .component-version {
    font-size: 0.75rem;
    color: var(--text-muted);
    background: var(--surface);
    padding: 0.1875rem 0.625rem;
    border-radius: var(--radius-sm);
    border: 1px solid var(--border);
  }

  .component-description {
    font-size: 1.0625rem;
    color: var(--text-muted);
    margin: 0;
    line-height: 1.7;
    max-width: 700px;
  }

  .component-nav {
    display: flex;
    gap: 0.375rem;
    padding: 0.375rem;
    background: var(--surface);
    border-radius: var(--radius-lg);
    border: 1px solid var(--border);
    margin-bottom: 2.5rem;
    width: fit-content;
    box-shadow: var(--shadow-sm);
  }

  .nav-item {
    font-size: 0.8125rem;
    font-weight: 500;
    padding: 0.625rem 1.25rem;
    color: var(--text-muted);
    text-decoration: none;
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
  }

  .nav-item:hover {
    color: var(--text);
    background: var(--surface-hover);
  }

  .nav-item.active {
    color: var(--accent);
    background: var(--accent-soft);
    font-weight: 600;
  }

  .component-section {
    margin-bottom: 4rem;
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text);
    margin: 0 0 1.5rem 0;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--border);
  }

  .section-title svg {
    color: var(--accent);
  }

  /* Sticky section title for API Reference */
  .sticky-title {
    position: sticky;
    top: 0;
    background: var(--bg);
    z-index: 10;
    padding-top: 1rem;
    margin-top: -1rem;
  }

  .examples-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .usage-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  @media (max-width: 1024px) {
    .app {
      grid-template-columns: 220px 1fr;
    }
  }

  @media (max-width: 768px) {
    .app {
      grid-template-columns: 1fr;
    }

    .component-page {
      padding: 1.5rem 1rem;
    }

    .component-title {
      font-size: 1.75rem;
    }

    .component-nav {
      width: 100%;
      overflow-x: auto;
    }

    .component-section {
      margin-bottom: 3rem;
    }

    .sticky-title {
      position: static;
    }
  }
</style>

<script>
  // Smooth scroll and active nav state
  const navItems = document.querySelectorAll('.nav-item');
  const sections = document.querySelectorAll('.component-section');

  navItems.forEach(item => {
    item.addEventListener('click', (e) => {
      e.preventDefault();
      const target = document.querySelector(item.getAttribute('href')!);
      if (target) {
        target.scrollIntoView({ behavior: 'smooth' });
        navItems.forEach(n => n.classList.remove('active'));
        item.classList.add('active');
      }
    });
  });

  // Update active nav on scroll
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const id = entry.target.id;
        navItems.forEach(item => {
          item.classList.toggle('active', item.getAttribute('href') === `#${id}`);
        });
      }
    });
  }, { threshold: 0.3 });

  sections.forEach(section => observer.observe(section));
</script>
