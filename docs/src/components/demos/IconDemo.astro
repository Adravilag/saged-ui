---
/**
 * IconDemo.astro
 * Demo section para el componente Icon
 */
import ComponentCard from '../ComponentCard.astro';
import DemoRow from '../DemoRow.astro';
import { iconProps } from '@/config/componentData';

// Get base URL for proper routing
const baseRaw = import.meta.env.BASE_URL;
const base = baseRaw.endsWith('/') ? baseRaw : `${baseRaw}/`;
---

<ComponentCard
  id="icon"
  title="Icono"
  titleKey="components.icon.title"
  tag="sg-icon"
  description="Sistema de iconos SVG optimizado"
  descriptionKey="components.icon.description"
  docsUrl="/components/icon"
  props={iconProps}
>
  <!-- Icon Manager Banner -->
  <div class="icon-manager-banner">
    <div class="banner-content">
      <div class="banner-icon">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="4 17 10 11 4 5"/><line x1="12" y1="19" x2="20" y2="19"/>
        </svg>
      </div>
      <div class="banner-text">
        <strong>Icon Manager CLI</strong>
        <span>Gestiona +200,000 iconos de Iconify desde terminal o GUI</span>
      </div>
    </div>
    <a href={`${base}components/icon/#icon-manager`} class="banner-link">
      <span>Ver más</span>
      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M7 17L17 7M17 7H7M17 7V17"/>
      </svg>
    </a>
  </div>

  <DemoRow label="Básicos" labelKey="components.icon.basic" code={`<sg-icon name="home" size="24"></sg-icon>
<sg-icon name="search" size="24"></sg-icon>
<sg-icon name="settings" size="24"></sg-icon>
<sg-icon name="user" size="24"></sg-icon>
<sg-icon name="menu" size="24"></sg-icon>`}>
    <sg-icon name="home" size="24"></sg-icon>
    <sg-icon name="search" size="24"></sg-icon>
    <sg-icon name="settings" size="24"></sg-icon>
    <sg-icon name="user" size="24"></sg-icon>
    <sg-icon name="menu" size="24"></sg-icon>
    <sg-icon name="close" size="24"></sg-icon>
    <sg-icon name="add" size="24"></sg-icon>
    <sg-icon name="edit" size="24"></sg-icon>
    <sg-icon name="delete" size="24"></sg-icon>
    <sg-icon name="save" size="24"></sg-icon>
  </DemoRow>
  <DemoRow label="Colores" labelKey="components.icon.colors" code={`<sg-icon name="heart" size="24" color="#ef4444"></sg-icon>
<sg-icon name="star" size="24" color="#f59e0b"></sg-icon>
<sg-icon name="check" size="24" color="#22c55e"></sg-icon>
<sg-icon name="refresh" size="24" color="#8b5cf6" spin></sg-icon>`}>
    <sg-icon name="heart" size="24" color="#ef4444"></sg-icon>
    <sg-icon name="star" size="24" color="#f59e0b"></sg-icon>
    <sg-icon name="check" size="24" color="#22c55e"></sg-icon>
    <sg-icon name="info" size="24" color="#3b82f6"></sg-icon>
    <sg-icon name="refresh" size="24" color="#8b5cf6" spin></sg-icon>
  </DemoRow>
  <DemoRow label="Tamaños" labelKey="components.icon.sizes" code={`<sg-icon name="star" size="16"></sg-icon>
<sg-icon name="star" size="24"></sg-icon>
<sg-icon name="star" size="32"></sg-icon>
<sg-icon name="star" size="48"></sg-icon>`}>
    <sg-icon name="star" size="16"></sg-icon>
    <sg-icon name="star" size="24"></sg-icon>
    <sg-icon name="star" size="32"></sg-icon>
    <sg-icon name="star" size="48"></sg-icon>
  </DemoRow>
</ComponentCard>

<style>
  .icon-manager-banner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    width: 100%;
    padding: 1rem 1.25rem;
    background: linear-gradient(135deg, var(--accent-soft) 0%, rgba(99, 102, 241, 0.05) 100%);
    border: 1px solid var(--accent);
    border-radius: var(--radius-md);
    margin-bottom: 0.5rem;
  }

  .banner-content {
    display: flex;
    align-items: center;
    gap: 0.875rem;
  }

  .banner-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: var(--accent);
    border-radius: var(--radius-sm);
    color: white;
    flex-shrink: 0;
  }

  .banner-text {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .banner-text strong {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text);
  }

  .banner-text span {
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .banner-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 0.875rem;
    background: var(--accent);
    border-radius: var(--radius-sm);
    color: white;
    font-size: 0.8125rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    flex-shrink: 0;
  }

  .banner-link:hover {
    background: var(--accent-hover, #4f46e5);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
  }

  @media (max-width: 600px) {
    .icon-manager-banner {
      flex-direction: column;
      align-items: flex-start;
    }

    .banner-link {
      width: 100%;
      justify-content: center;
    }
  }
</style>
